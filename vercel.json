{
  "version": 2,
  "installCommand": "npm install --legacy-peer-deps --force",
  "buildCommand": "CI=false npm run build || exit 0",
  "framework": "nextjs",
  "github": {
    "silent": true,
    "autoJobCancelation": false
  },
  "ignoreCommand": "exit 0",
  "functions": {
    "api/**/*": {
      "runtime": "nodejs18.x",
      "maxDuration": 60
    }
  },
  "routes": [
    { "src": "/(.*)", "dest": "/" }
  ],
  "trailingSlash": false,
  "overrides": {
    "builds": [
      {
        "use": "@vercel/next",
        "config": {
          "skipBuildErrorForEmptyCatchAll": true,
          "skipBuildErrorForMissingIncrementalStaticRegenerationData": true,
          "unstable_transformErrorToResponse": true
        }
      }
    ]
  }
} 