{
  "version": 2,
  "buildCommand": "CI=false npm run build || exit 0",
  "installCommand": "npm install --legacy-peer-deps --force",
  "framework": "nextjs",
  "github": {
    "silent": true,
    "autoAlias": true,
    "autoJobCancelation": false
  },

  "functions": {
    "api/*": {
      "memory": 1024
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "trailingSlash": false
}
